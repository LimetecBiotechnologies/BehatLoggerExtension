{
  "name": "seretos/behat-logger-extension",
  "description": "log the behat execution into json result",
  "keywords": [
    "behat",
    "logger",
    "extension"
  ],
  "homepage": "https://github.com/Seretos/BehatLoggerExtension",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Arne von Appen",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.1",
    "behat/behat":"^3.3",
    "behat/mink-extension":"^2.2",
    "behat/mink-selenium2-driver":"^1.3",
    "symfony/http-kernel": "^3.3",
    "symfony/finder": "^3.3",
    "symfony/framework-bundle": "^3.3",
    "seretos/testrail-php-api": "^0.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7|^6.0"
  },
  "autoload": {
    "psr-4": {
      "seretos\\BehatLoggerExtension\\": "src/"
    }
  },
  "bin": [
    "behat-logger-cli"
  ]
}
